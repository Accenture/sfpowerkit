{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "sfpowerkit pool config schema - tag mode",
    "description": "Config with script file and relaxing full IP range (tag mode)",
    "type": "object",
    "additionalProperties": false,
    "required" : ["pool"],
    "properties": {
        "pool": {
            "type" : "object",
            "expiry": {
              "description" : "Setting the Expiration time for the scratch org",
              "type" : "integer"
            },
            "config_file_path": {
              "description": "This is the config file path for scratch org",
              "type": "string"
            },
            "tag": "sfpowerkit",
            "relax_ip_ranges": [
              {
                "start": "49.0.0.0",
                "end": "49.255.255.255"
              },
              {
                "start": "42.0.0.0",
                "end": "42.255.255.255"
              }
            ],
            "max_allocation": {
              "description" : "this is the max number of scratch orgs",
              "type": "integer"
            }
          }
    }
}