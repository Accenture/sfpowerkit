{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "sfpowerkit pool config schema - tag mode",
  "description": "Config with script file and relaxing full IP range (tag mode)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "pool"
  ],
  "properties": {
    "pool": {
      "type": "object",
      "properties": {
        "expiry": {
          "type": "integer"
        },
        "config_file_path": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "relax_ip_ranges": {
          "type": "array",
          "contains": {
            "type": "object",
            "properties": {
              "start": {
                "type" : "string",
                "pattern" : "ipv4"
              },
              "end": {
                "type" : "string",
                "pattern" : "ipv4"
              }
            }
          }
        }
      }
    },
    "max_allocation": {
      "description": "this is the max number of scratch orgs",
      "type": "integer"
    }
  }
}
